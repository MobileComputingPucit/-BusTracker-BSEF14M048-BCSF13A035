<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bus.four.bustracker.profile_activity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_theme">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_pic_background"
                android:id="@+id/profile_pic"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/profile_image" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID:               BSEF14M006"
                android:layout_marginLeft="25dp"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:layout_marginTop="25dp"
                android:id="@+id/tv_id"
                android:layout_below="@id/profile_pic"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:        Waqar Hassan"
                android:layout_marginLeft="25dp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:id="@+id/tv_name"
                android:layout_below="@id/tv_id"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Email:         bsef14m006@pucit.edu.pk"
                android:layout_marginLeft="25dp"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:id="@+id/tv_email"
                android:layout_below="@id/tv_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Phone No.: 0300-4823916"
                android:layout_marginLeft="25dp"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:id="@+id/tv_phone"
                android:layout_below="@id/tv_email"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Adress:       Lahore"
                android:layout_marginLeft="25dp"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:layout_below="@id/tv_phone"/>
        </RelativeLayout>
</android.support.constraint.ConstraintLayout>
